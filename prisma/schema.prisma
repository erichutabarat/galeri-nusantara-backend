generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin{
  id  Int @id @default(autoincrement())
  username String @unique
  password String
  email String?
  role Role @default(ADMIN)
}

model Contributor{
  id Int @id @default(autoincrement())
  username String @unique
  password String
  email String? @unique
  role Role @default(CONTRIBUTOR)
  posts Budaya[] @relation("ContributorToBudaya")
}

model Budaya{
  id Int @id @default(autoincrement())
  title String @unique
  images Image[]
  source String
  description String
  categories Category[] @relation("BudayaToCategory")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  authorId Int
  author Contributor @relation("ContributorToBudaya", fields: [authorId], references: [id], map: "Budaya_author_fkey")
}

model Category{
  id Int @id @default(autoincrement())
  name String
  budayaId Int
  budaya Budaya @relation("BudayaToCategory", fields: [budayaId], references: [id])
}

model Image{
  id Int @id @default(autoincrement())
  url String
  description String?
  budayaId Int
  budaya Budaya? @relation(fields: [budayaId], references: [id])
}

enum Role{
  CONTRIBUTOR
  ADMIN
}